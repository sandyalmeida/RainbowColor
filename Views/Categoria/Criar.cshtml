@model RainbowColor.Categoria

@{
    ViewData["Title"] = "Criar Nova Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h4>Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" required/>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
    <div class="md-6 mt-2">
        <div class="form-group text-right">
            <input type="submit" value="Cadastrar" class="btn btn-outline-success" />
            <a class="btn btn-outline-info" asp-action="Index">Voltar para lista</a>
        </div>
    </div>
        </form>

    </div>
</div>



