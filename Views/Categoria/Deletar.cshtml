@model RainbowColor.Categoria

@{
    ViewData["Title"] = "Deletar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Deletar</h1>

<h3>Você quer realmente excluir essa categoria?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="DeletarConfirmado">
        <input type="hidden" asp-for="Id" />
        <input class="btn btn-outline-danger" type="submit" value="Deletar" class="btn btn-danger" /> |
        <a class="btn btn-outline-info" asp-action="Index">Voltar para lista</a>
    </form>
</div>
