@model IEnumerable<Cliente>

@{
    ViewData["Title"] = "Lista de Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-outline-success" asp-action="Criar">Cadastrar novo cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CpfCnpj)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CpfCnpj)
            </td>
            <td>
                <a class="btn btn-outline-warning" asp-action="Editar" asp-route-id="@item.IdCliente">Editar</a> |
                <a class="btn btn-outline-primary" asp-controller="Enderecos" asp-action="Index" asp-route-idCliente="@item.IdCliente">Endereços</a> |
                <a class="btn btn-outline-danger" asp-action="Deletar" asp-route-id="@item.IdCliente">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
