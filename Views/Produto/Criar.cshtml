@model RainbowColor.Produto

@{
    ViewData["Title"] = "Cadastrar Novo Produto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdCategoria" class="control-label"></label>
                <select asp-for="IdCategoria" class ="form-control" asp-items="ViewBag.Categorias"></select>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" required />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" required/>
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estoque" class="control-label"></label>
                <input asp-for="Estoque" class="form-control" required/>
                <span asp-validation-for="Estoque" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="md-6 mt-2">
                    <div class="form-group text-right">
                        <input type="submit" value="Cadastrar" class="btn btn-outline-success" />
                        <a class="btn btn-outline-info" asp-action="Index">Voltar para lista</a>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>




